{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/flowtype",
    "prettier/react"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "prettier"
  ],
  "env": {
    "es6": true,
    "jasmine": true
  },
  "rules": {
    "global-require": "off",
    "prettier/prettier": ["error", {
      "trailingComma": "es5",
      "singleQuote": true
    }],

    "react/forbid-prop-types": "warn",
    "react/jsx-filename-extension": [
      "off", { "extensions": [".js", ".jsx"] }
    ],
    "react/no-danger": 0,

    "class-methods-use-this": 0,
    "no-console": 0,
    "no-plusplus": 0,
    "no-undef": 0,
    "no-underscore-dangle": "off",
    "no-use-before-define": 0
  },
  "globals": {
    "__DEV__": true,
    "window": true,
    "next": true
  }
}
